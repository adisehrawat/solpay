{
  "expo": {
    "name": "solpay",
    "slug": "solpay",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/sp.png",
    "scheme": "solpay",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/solpay.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.solpay.adi"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/sp.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/solpay.png",
          "resizeMode": "cover",
          "backgroundColor": "#000000",
          "enableFullScreenImage_legacy": true
        }
      ],
      [
        "expo-font",
        {
            "fonts": [
                "./assets/fonts/Rubik-bold.ttf",
                "./assets/fonts/Rubik-ExtraBold.ttf",
                "./assets/fonts/Rubik-Light.ttf",
                "./assets/fonts/Rubik-Medium.ttf",
                "./assets/fonts/Rubik-Regular.ttf",
                "./assets/fonts/Rubik-SemiBold.ttf" 
            ]
        }
    ]
    ],
    
    "experiments": {
      "typedRoutes": true
    }
  }
}
